{
  "extends": ["config:base"],
  "lockFileMaintenance": { "enabled": true, "automerge": true },
  "prHourlyLimit": 5,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "react monorepo with types"
    },
    {
      "matchPackagePatterns": ["@mantine/*"],
      "groupName": "mantine monorepo"
    }
  ],
  "ignorePaths": [
    "frontend/package.json"
  ]
}
